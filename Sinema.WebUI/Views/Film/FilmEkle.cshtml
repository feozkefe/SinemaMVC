
@{
    ViewBag.Title = "FilmEkle";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <form class="form-horizontal" method="post" action="/Film/FilmEkle">
                <div class="card-body">
                    <h4 class="card-title">Film Formu</h4>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" required name="Adi" id="fname" placeholder="Filmin Adı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">3D Bilgisi</label>
                        <div class="col-sm-9">
                            <input type="text" name="UcBoyutluMu" class="form-control" id="lname" placeholder="True/False olarak girin">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Film Süresi</label>
                        <div class="col-sm-9">
                            <input type="number" name="Sure" class="form-control" id="lname" placeholder="Dakika olarak girin">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email1" class="col-sm-3 text-right control-label col-form-label">Yerli Mi?</label>
                        <div class="col-sm-9">
                            <input type="text" name="YerliMi" class="form-control" id="email1" placeholder="True/False olarak girin">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email1" class="col-sm-3 text-right control-label col-form-label">Tur ID</label>
                        <div class="col-sm-9">
                            <input type="text" name="TurID" class="form-control" id="email1" placeholder="Tur ID'sini girin.'">
                        </div>
                    </div>

                </div>
                <div role="alert">
                    @TempData["Error"]
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>


    </div>

</div>

