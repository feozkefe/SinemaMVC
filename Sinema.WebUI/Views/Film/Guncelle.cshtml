


@{
    ViewBag.Title = "FilmGuncelle";
}

@model Sinema.DAL.Film

<h2>Film Guncelle</h2>
<hr />

<div class="row">

    @Html.HiddenFor(model => model.ID)

    <div class="col-md-6">
        <div class="card">
            <form class="form-horizontal" method="post" action="/Film/Guncelle">
                <div class="card-body">
                    <h4 class="card-title">Film Güncelleme Formu</h4>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Film Adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="@Model.Adi" required name="Adi" id="fname" placeholder="Film Adını Giriniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">3D Bilgisi</label>
                        <div class="col-sm-9">
                            <input type="text" name="UcBoyutluMu" value="@Model.UcBoyutluMu" class="form-control" id="lname" placeholder="True/False olarak giriniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Sure</label>
                        <div class="col-sm-9">
                            <input type="number" name="Sure" value="@Model.Sure" class="form-control" id="lname" placeholder="Dakika olarak giriniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Yerli Mi?</label>
                        <div class="col-sm-9">
                            <input type="text" name="YerliMi" value="@Model.YerliMi" class="form-control" id="lname" placeholder="True/False olarak giriniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email1" class="col-sm-3 text-right control-label col-form-label">Tur ID</label>
                        <div class="col-sm-9">
                            <input type="number" name="TurID" value="@Model.TurID" class="form-control" id="email1" placeholder="TurID'sini Buraya Girin">
                        </div>
                    </div>
                    <input type="hidden" value="@Model.ID" name="ID" />
                </div>
                <div role="alert">
                    @TempData["Error"]
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>


    </div>
    <div>
        @Html.ActionLink("Listeye Geri Dön", "Index")
    </div>


</div>

